{
  "name": "scrabble-service",
  "version": "1.0.0",
  "description": "Le projet Scrabble pour le cours LOG2990 de la session H2017",
  "scripts": {
    "start": "tsc && concurrently --kill-others \"tsc -w \" \"nodemon out/www.js\" ",
    "lint": "tslint app/**/*.ts app/*.ts --force -t verbose -e app/data/dictionary.ts",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "tsc:v": "tsc -v",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false",
    "test": "tsc &&  mocha out/*/*/*.spec.js -R spec -c -u exports --harmony && mocha out/*/*/*/*.spec.js -R spec -c -u exports --harmony",
    "coverage": "tsc && nyc --require ts-node/register _mocha -c -R spec -- out/**/*.js",
    "nyan-coverage": "tsc && nyc --require ts-node/register _mocha -c -R nyan -- out/**/*.js"
  },
  "nyc": {
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha": {
    "colors": true
  },
  "dependencies": {
    "@types/socket.io": "1.4.28",
    "body-parser": "1.16.1",
    "concurrently": "3.3.0",
    "cookie-parser": "1.4.3",
    "cors": "2.8.1",
    "debug": "2.6.1",
    "express": "4.14.1",
    "mongoose": "4.8.4",
    "morgan": "1.8.1",
    "serve-favicon": "2.4.0",
    "socket.io": "1.7.3",
    "systemjs": "0.19.46"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "3.4.35",
    "@types/cookie-parser": "1.3.30",
    "@types/cors": "2.8.0",
    "@types/debug": "0.0.29",
    "@types/express": "4.0.35",
    "@types/express-serve-static-core" : "4.0.40",
    "@types/serve-static" : "1.7.31",
    "@types/mocha": "2.2.39",
    "@types/mongoose": "4.7.6",
    "@types/mongodb": "2.1.40",
    "@types/morgan": "1.7.32",
    "@types/node": "6.0.63",
    "@types/serve-favicon": "2.2.28",
    "@types/socket.io": "1.4.28",
    "chai": "3.5.0",
    "mocha": "3.2.0",
    "nodemon": "1.11.0",
    "nyc": "10.1.2",
    "rimraf": "2.6.0",
    "ts-node": "2.1.0",
    "tslint": "4.4.2",
    "tslint-eslint-rules": "3.4.0",
    "typescript": "2.1.6"
  }
}
